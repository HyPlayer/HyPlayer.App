<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HyPlayer.Controls.App"
    xmlns:pivotExtensions="using:HyPlayer.Views.Controls.App.PivotExtensions">

    <Style TargetType="pivotExtensions:PivotView">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="pivotExtensions:PivotView">
                    <Grid x:Name="LayoutRoot">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border x:Name="HeaderContainer" Child="{TemplateBinding Header}" Canvas.ZIndex="1" />
                        <pivotExtensions:PivotExHeaderView x:Name="PivotExHeaderView" Pivot="{TemplateBinding Pivot}"
                                                 Grid.Row="1" Canvas.ZIndex="1" Margin="8,0" />
                        <Border x:Name="PivotContainer" Grid.RowSpan="3" Child="{TemplateBinding Pivot}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>