<local:HomePageBase
    x:Class="HyPlayer.App.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyPlayer.App.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:HyPlayer.NeteaseProvider.Models"
    xmlns:controls1="using:HyPlayer.App.Views.Controls.App"
    xmlns:viewmodels="using:HyPlayer.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
    mc:Ignorable="d">
    <local:HomePageBase.Resources>
        <DataTemplate
            x:Key="HomePageRecommendSongItemTemplate"
            x:DataType="models:NeteaseSong">
            <Grid
                HorizontalAlignment="Stretch"
                Padding="15"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="84" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <controls:ImageEx
                    Width="84"
                    Height="84"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    CornerRadius="8"
                    Source="{x:Bind Converter={StaticResource CoverToImageSourceConverter}, ConverterParameter=84}"
                    Stretch="UniformToFill" />
                <Grid
                    Grid.Column="1"
                    Margin="16,9,0,9"
                    RowSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        MaxLines="1"
                        TextTrimming="CharacterEllipsis"
                        Text="{x:Bind Name}" />
                    <TextBlock
                        Grid.Row="1"
                        MaxLines="1"
                        FontSize="14"
                        TextTrimming="CharacterEllipsis"
                        Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                        Text="{x:Bind CreatorList, Converter={StaticResource StringListToStringConverter}}" />
                    <TextBlock
                        MaxLines="1"
                        FontSize="14"
                        Grid.Row="2"
                        TextTrimming="CharacterEllipsis"
                        Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                        Text="{x:Bind Album.Name}" />
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate
            x:Key="PlayListTemplate"
            x:DataType="models:NeteasePlaylist">
            <Grid
                HorizontalAlignment="Stretch"
                Padding="15"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="84" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <controls:ImageEx
                    Width="84"
                    Height="84"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    CornerRadius="8"
                    Source="{x:Bind Converter={StaticResource CoverToImageSourceConverter}, ConverterParameter=84}"
                    Stretch="UniformToFill" />
                <Grid
                    Grid.Column="1"
                    Margin="16,9,0,9"
                    RowSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        MaxLines="1"
                        TextTrimming="CharacterEllipsis"
                        Text="{x:Bind Name}" />
                    <TextBlock
                        Grid.Row="1"
                        MaxLines="1"
                        FontSize="14" VerticalAlignment="Bottom"
                        TextTrimming="CharacterEllipsis"
                        Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                        Text="{x:Bind CreatorList, Converter={StaticResource StringListToStringConverter}}" />
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate
            x:Key="LeaderboardTemplate"
            x:DataType="models:NeteasePlaylist">
            <Grid                
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource ButtonRevealBorderBrush}"
                BorderThickness="{ThemeResource ButtonRevealBorderThemeThickness}"
                ToolTipService.ToolTip="{x:Bind Name}"
                UseSystemFocusVisuals="True"
                CornerRadius="8"
                FocusVisualMargin="-3">
                <controls:ImageEx
                            VerticalAlignment="Center"
                    CornerRadius="8"
                            Source="{x:Bind Converter={StaticResource CoverToImageSourceConverter}, ConverterParameter=96}"
                            Stretch="UniformToFill" />
                <TextBlock
                            Margin="12"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                    FontSize="10"
                            Foreground="White">
                            <Run FontSize="9"  FontFamily="{ThemeResource SymbolThemeFontFamily}">&#xE102;</Run>
                            <Run Text="{x:Bind PlayCount, Converter={StaticResource CountHumanizerConverter}}" />
                </TextBlock>
            </Grid>


        </DataTemplate>
    </local:HomePageBase.Resources>
    <Grid>
        <ScrollViewer
            x:Name="MainScrollViewer">
            <Grid
                Margin="36,36,36,128"
                RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="400" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Canvas.ZIndex="1"
                    FontSize="24"
                    Foreground="White"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="主页" />
                <Grid
                    Grid.Row="0"
                    Height="500"
                    Margin="-36,-36,-36,0"
                    VerticalAlignment="Top">
                    <controls1:HomePageHeaderImage
                        Grid.RowSpan="2"
                        Height="440"
                        VerticalAlignment="Top" />
                    <StackPanel
                        Margin="36"
                        VerticalAlignment="Center"
                        Spacing="4">
                        <TextBlock
                            FontSize="36"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{x:Bind ViewModel.CurrentPlaying.Song.Name, Mode=OneWay}" />
                        <TextBlock
                            FontSize="16"
                            Foreground="White"
                            Text="{x:Bind ViewModel.CurrentPlaying.Song.CreatorList, Mode=OneWay}" />
                    </StackPanel>
                </Grid>
                <StackPanel
                    VerticalAlignment="Center"
                    Spacing="2"
                    Visibility="Visible">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontSize="32"
                            Foreground="White"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="欢迎，" />
                        <TextBlock
                            Margin="-10,-1,0,0"
                            FontSize="34"
                            FontWeight="Bold"
                            Foreground="{StaticResource AccentAAFillColorDefaultBrush}"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{x:Bind ViewModel.AccountViewModel.User.Name}" />
                    </StackPanel>
                    <TextBlock
                        FontSize="16"
                        Foreground="White"
                        Text="用音乐开启新的一天吧" />
                </StackPanel>
                <StackPanel
                    x:Name="ActionPanel"
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Canvas.ZIndex="1"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Padding="16"
                        CornerRadius="6"
                        Height="60"
                        Width="125">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="22"
                                Glyph="&#xE006;" />
                            <TextBlock
                                FontSize="14"
                                Text="我的喜欢" />
                        </StackPanel>
                    </Button>
                    <Button
                        Padding="16"
                        Command="{x:Bind ViewModel.GetSongsCommand, Mode=OneWay}"
                        CornerRadius="6"
                        Height="60"
                        Width="125">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="22"
                                Glyph="&#xE163;" />
                            <TextBlock
                                FontSize="14"
                                Text="每日推荐" />

                        </StackPanel>
                    </Button>
                    <Button
                        Padding="16"
                        CornerRadius="6"
                        Height="60"
                        Width="125">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="12">
                            <FontIcon
                                FontSize="22"
                                Glyph="&#xEFA9;" />
                            <TextBlock
                                FontSize="14"
                                Text="私人FM" />

                        </StackPanel>
                    </Button>

                </StackPanel>
                <Grid
                    x:Name="ContentArea"
                    Grid.Row="2"
                    RowSpacing="8"
                    Visibility="{x:Bind Path=ViewModel.AccountViewModel.IsLogin, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="auto"/>
                        <RowDefinition />
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="12,8" >
                        <TextBlock
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="推荐歌曲" />
                        <FontIcon
                        Margin="4,2,0,0"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource SystemAccentColorLight1}"
                        Glyph="&#xE970;"/>
                    </StackPanel>

                    <Button
                        Margin="0,0,6,0"
                        Grid.Row="0"
                        HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xEDDA;" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="播放全部" />
                        </StackPanel>
                    </Button>

                    <controls:AdaptiveGridView
                        Grid.Row="1"
                        CanBeScrollAnchor="True"
                        DesiredWidth="295"
                        ItemHeight="112"
                        IsItemClickEnabled="True"
                        ItemTemplate="{StaticResource HomePageRecommendSongItemTemplate}"
                        ItemsSource="{x:Bind ViewModel.RecommendedSongs, Mode=OneWay}"
                        OneRowModeEnabled="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.HorizontalScrollMode="Disabled"
                        SelectionMode="None" />

                    <StackPanel Orientation="Horizontal" Margin="12,8" Grid.Row="2">
                        <TextBlock
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="推荐歌单" />
                        <FontIcon
                        Margin="4,2,0,0"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource SystemAccentColorLight1}"
                        Glyph="&#xE970;"/>
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        Content="查看更多" />

                    <controls:AdaptiveGridView
                        x:Name="PlayListView"
                        Grid.Row="3"
                        DesiredWidth="295"
                        MaxHeight="370"
                        IsItemClickEnabled="True"
                        ItemClick="OnPlaylistItemClicked"
                        ItemHeight="112"
                        OneRowModeEnabled="True"
                        ScrollViewer.HorizontalScrollMode="Disabled"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ItemTemplate="{StaticResource PlayListTemplate}"
                        ItemsSource="{x:Bind ViewModel.PlayLists, Mode=OneWay}"
                        SelectionMode="None" />

                    <StackPanel Orientation="Horizontal" Margin="12,8" Grid.Column="1">
                        <TextBlock
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="私人雷达" />
                        <FontIcon
                        Margin="4,2,0,0"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource SystemAccentColorLight1}"
                        Glyph="&#xE970;"/>
                    </StackPanel>

                    <Grid
                        Margin="14,50,14,14"
                        Grid.Column="1"
                        Grid.RowSpan="4"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <controls:ImageEx
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0"
                            Width="240"
                            Height="180"
                            CornerRadius="4"
                            Background="Gray"/>
                        <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        TextTrimming="CharacterEllipsis"
                         TextWrapping="Wrap"
                        Text="歌单名歌单名歌单名歌单名歌单名歌单名歌单名歌单名歌单名(替换)" 
                            Margin="15,210,15,0"/>
                        <TextBlock
                        FontSize="14" VerticalAlignment="Bottom" Margin="15"
                        TextTrimming="CharacterEllipsis"
                        Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                        Text="云音乐私人雷达" />
                    </Grid>
                </Grid>
                <Grid
                    Grid.Row="3"
                    RowSpacing="8"
                    Visibility="{x:Bind Path=ViewModel.AccountViewModel.IsLogin, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                </Grid>
                <Grid
                    Grid.Row="4"
                    Margin="0,12,0,0"
                    RowSpacing="8"
                    CornerRadius="{ThemeResource OverlayCornerRadius}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="12,8" >
                        <TextBlock
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="排行榜" />
                        <FontIcon
                        Margin="4,2,0,0"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource SystemAccentColorLight1}"
                        Glyph="&#xE970;"/>
                    </StackPanel>
                    <HyperlinkButton
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        Content="查看更多"
                        Margin="12,4" />

                    <controls:AdaptiveGridView
                        x:Name="LeaderboardView"
                        Margin="12,4"
                        Grid.Row="1"
                        MinHeight="130"
                        MaxHeight="390"
                        DesiredWidth="240"                      
                        OneRowModeEnabled="True"
                        IsItemClickEnabled="True"
                        ItemClick="OnPlaylistItemClicked"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.HorizontalScrollMode="Disabled"
                        ItemHeight="128"
                        SelectionMode="None"
                        ItemTemplate="{StaticResource LeaderboardTemplate}"
                        ItemsSource="{x:Bind ViewModel.TopLists, Mode=OneWay}">
                        <controls:AdaptiveGridView.Resources>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Padding" Value="4"/>
                            </Style>
                        </controls:AdaptiveGridView.Resources>
                    </controls:AdaptiveGridView>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:HomePageBase>