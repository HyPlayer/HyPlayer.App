<?xml version="1.0" encoding="utf-8" ?>
<local:MePageBase
    x:Class="HyPlayer.App.Views.Pages.MePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyPlayer.App.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid
            Height="200"
            VerticalAlignment="Top"
            Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}">
            <StackPanel x:Name="InfoPane" Margin="36,36,0,0">
                <TextBlock
                    
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="{x:Bind ViewModel.User.Name}" />
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.User.Description}" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock>
                        <Run Text=""/>
                        <Run Text="粉丝"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
</local:MePageBase>
